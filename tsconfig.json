{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "ignore": [
    "node_modules",
    "build"
  ],
}